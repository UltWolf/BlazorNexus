@page "/counterRoute"
@using BlazorNexsus.Navigation.Abstractions
@inject INavigationManager<Routes> _navigationManager

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@if (hasBackPage)
{
    <button class="btn btn-primary" @onclick="GoBack">Go Back</button>
}

@code {
    private int currentCount = 0;
    private bool hasBackPage = false;
    
    private void IncrementCount()
    {
        currentCount++;
    }

    protected override async Task OnInitializedAsync()
    {
        hasBackPage = await _navigationManager.HasBackPage();
    }
    
    private void GoBack()
    {
        _navigationManager.Back(fallBackPageKey: Routes.CounterPage);
    }

}